# Server Configuration
PORT=3000

# Database Configuration
# For development: SQLite database file
# For production: PostgreSQL connection string (e.g., postgresql://user:password@host:port/database)
DATABASE_URL="file:./dev.db"

# JWT Secret for authentication tokens
# IMPORTANT: Change this to a strong random string in production!
JWT_SECRET="change-me-to-a-secure-random-string"

# Azure Blob Storage (required in production for PDFs/media storage)
# Leave empty for development (file uploads will still work, but won't be stored in Azure)
AZURE_STORAGE_ACCOUNT="your-azure-storage-account-name"
AZURE_STORAGE_KEY="your-azure-storage-account-key"
AZURE_BLOB_CONTAINER_INVOICES="invoices"

# Email Configuration (Resend API)
# Get your API key from: https://resend.com/api-keys
# For testing, you can use: onboarding@resend.dev
# For production, verify your domain in Resend dashboard
RESEND_API_KEY="re_your_api_key_here"
EMAIL_FROM="onboarding@resend.dev"

# Optional: Auto-send invoice emails on approval
# Set to "true" to automatically email invoices when approved
SEND_EMAIL_ON_APPROVE=false
# Default recipient email for auto-send (leave empty if not using auto-send)
DEFAULT_INVOICE_EMAIL_TO=""
