<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/card_background_grey"
    app:cardCornerRadius="@dimen/corner_radius_medium"
    app:cardElevation="@dimen/elevation_small"
    android:layout_marginBottom="@dimen/margin_medium"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <!-- Top Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left: Icon and Invoice Number -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_invoice_icon_background"
                    android:layout_marginEnd="@dimen/margin_medium">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_menu_view"
                        android:padding="12dp"
                        android:tint="@color/text_white" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/invoiceNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INV-2025-001"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/customerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Name"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />
                    
                    <TextView
                        android:id="@+id/statusBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DRAFT"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="3dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/status_badge_draft" />
                </LinearLayout>
            </LinearLayout>

            <!-- Right: Amount -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/totalAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R5600.00"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/itemsCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 items"
                    android:textSize="@dimen/text_size_xsmall"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Row: Date and Location -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_today"
                android:tint="@color/text_secondary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/10/2025"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary" />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:background="@drawable/circle_dot"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/projectSiteText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Winchester Hills"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

